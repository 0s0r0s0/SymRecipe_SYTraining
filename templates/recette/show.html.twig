{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recette.name }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ recette.time }}</td>
            </tr>
            <tr>
                <th>People</th>
                <td>{{ recette.people }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ recette.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ recette.createdAt ? recette.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ recette.updatedAt ? recette.updatedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ recette.difficulty }}</td>
            </tr>
            <tr>
                <th>IsFavorite</th>
                <td>{{ recette.isFavorite ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recette_index') }}">back to list</a>

    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>

    {{ include('recette/_delete_form.html.twig') }}
