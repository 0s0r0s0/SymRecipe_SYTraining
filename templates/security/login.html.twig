{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}

            <div class="alert alert-dismissible alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}


            <form action="{{ path('login') }}" method="post">

                <div class="form-group">
                    <label for="username" class="form-label mt-4">Email</label>
                    <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="mail@mail.fr" value="{{ last_username }}" name="_username">
                    <small id="emailHelp" class="form-text text-muted">Vos donn√©es sont confidentielles</small>
                </div>
                <div class="form-group">
                    <label for="password" class="form-label mt-4">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="*******">
                </div>

                <button class="btn btn-primary mt-4" type="submit">Connexion</button>
            </form>

    </div>
{% endblock %}
